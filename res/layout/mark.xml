<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="New mark"
                android:id="@+id/markTitle" android:textSize="30dp" android:layout_weight="0"
                android:singleLine="true" android:gravity="bottom|left"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="0"
                android:id="@+id/markPoints" android:textSize="20dp" android:layout_weight="0" android:gravity="center_vertical|left"
                android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>