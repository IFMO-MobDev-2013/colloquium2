<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical|left">
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backBtn"
                android:id="@+id/backBtn"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject name"
                android:id="@+id/subjectName" android:textSize="22dp" android:layout_toRightOf="@+id/backBtn"
                android:layout_alignTop="@+id/backBtn" android:layout_alignBottom="@+id/backBtn"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addBtn"
                android:id="@+id/addMarkBtn" android:layout_alignParentRight="true" android:layout_alignTop="@+id/backBtn"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark:"
                android:id="@+id/textView"
                android:textSize="17dp"
                android:layout_toLeftOf="@+id/subjectMark" android:layout_alignTop="@+id/backBtn"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subjectMark"
                android:textSize="17dp"
                android:layout_toLeftOf="@+id/addMarkBtn" android:layout_alignTop="@+id/backBtn" android:text="000"/>
    </RelativeLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/markList" android:layout_gravity="center"/>
</LinearLayout>

